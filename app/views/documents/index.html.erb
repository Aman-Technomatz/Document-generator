<div class="container mt-4">
  <p class="text-success"><%= notice %></p>

  <h1 class="mb-4">Documents</h1>

  <div class="mb-3">
    <%= link_to "New Document", new_document_path, class: "btn btn-primary" %>
  </div>
   <%= form_tag(documents_path, method: :get) do %>
      <%= text_field_tag :query, params[:query], placeholder: "Search document" %>
      <%= submit_tag "Search" %>
  <% end %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Document Id</th>
        <th>Document Type</th>
        <th>Employee Id</th>
        <th>User Name</th>
        <th>User Id</th>
        <th>PDF</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Destroy</th>
      </tr>
    </thead>
    <tbody>
      <% @documents.each do |document| %>
        <%= render partial: "document", locals: { document: document } %>
      <% end %>
    </tbody>
  </table>
  <% if @docuemnts.blank?%>
    <%= render "show_error"%>
  <% else %>
    <%== pagy_bootstrap_nav(@pagy) %>
  <% end%>
</div>
