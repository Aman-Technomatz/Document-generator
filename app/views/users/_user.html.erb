<div class="col-md-6 mb-4">
  <div class="card">
    <div class="card-header">
      <strong><%= user.name %></strong>
    </div>
    <div class="card-body">
      <p><strong>Email:</strong> <%= user.email %></p>
      <p><strong>Position:</strong> <%= user.position %></p>
      <p class="card-text"><strong>Mobile No:</strong> <%= user.mobile_no %></p>
      <div class="mt-3">
        <%= link_to "Show this user", user_path(user), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
